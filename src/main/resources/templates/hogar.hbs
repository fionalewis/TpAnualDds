{{#partial "contenido"}}
<!DOCTYPE html>

<head>
	<meta charset="utf-8">
	<title>Analizar Empresas</title>
</head>

<body>
	<h2>Estado del hogar</h2>
	
	<h3>Consumo total:</h3>
	<div value={{consumoTotal}}>{{consumoTotal}}<small>kWh</small></div>
	<br/>
	<h3>Consumo del Ãºltimo mes:</h3>
	<div value={{consumo}}>{{consumo}}<small>kWh</small></div>
	<br/>
		
	<div class="table-responsive">
	<table class="table">
	<caption>Dispositivos</caption>
	<thead>
		<tr>
			<th>Nombre del dispositivo</th>
			<th>Modelo</th>			
			<th>Estado</th>
		</tr>
	</thead>
	<tbody>
		{{#each dispositivos}}
		<tr>
			<td>{{nombreDisp}}</td>
			{{#if equipoConcreto}}
			<td>{{equipoConcreto}}</td>
			{{^}}
			<td> - </td>
			{{/if}}			
			<td>{{estadoActual}}</td>
		</tr>
		{{~/each}}
	</tbody>
	</table>

	<div class="form-row text-center">
    	<a href="../"><input class="btn btn-primary btn-lg" value="Volver" style="width:100px"></a>
  	</div>
</body>
{{/partial}}
