{{#partial "contenido"}}
<!DOCTYPE html>

<head>
	<meta charset="utf-8">
	<title>Analizar Empresas</title>
</head>

<body>

	<form action="/consumo" method="POST">
		
		<h1>Calculo de Consumo </h1>
		
		<h2>Ingrese un periodo</h2>

		<div class="form-group">
			<label for="inicioPeriodo">Inicio Periodo</label>
			<input type="date" placeholder="Ingrese un año" name="inicioPeriodo">
		</div>
	
		<div class="form-group">		
			<label for="finPeriodo">Fin Periodo</label>
			<input type="date" placeholder="Ingrese un año" name="finPeriodo">
		</div>
		
		<div class="form-group">
			<input class="btn btn-primary btn-lg" type="submit" value="Calcular consumo">
		</div>
		
		<h3>Consumo en horas de:</h3> <div value={{consumo}}>{{consumo}}</div>

	<div class="form-row text-center">
    	<a href="../"><input class="btn btn-primary btn-lg" value="Volver" style="width:100px"></a>
  	</div>
</body>
{{/partial}}
