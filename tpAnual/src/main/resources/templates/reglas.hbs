{{#partial "contenido"}}
<!DOCTYPE html>

<head>
	<meta charset="utf-8">
	<title>Analizar Empresas</title>
</head>

<body>

	<h1>Reglas y Dispositivos</h1>
	
	

	<div>
    	<a href="/agregar-disp"><input class="btn btn-primary btn-lg" value="+ Agregar dispositivo"></a>
  	</div>
		
	<div class="table-responsive">
		<h3>Dispositivos</h3>
	<table class="table">
		<tr>
			<th>Nombre</th>
			<th>Estado</th>
			<th>ID</th>
			<th>Accion</th>
			<th> Dar de baja</th>
		</tr>
		{{#each dispositivos}}
		<tr>
			<td>{{nombreDisp}}</td>
			<td>{{estadoDisp}}</td>
			<td type="text" name="id" value="{{id}}">{{id}}</td>
			    <select name="id" hidden>
		  			<option value="{{id}}">{{id}}</option>
				</select>
		<form action="/accion" method="POST">
			<td>
				<button class="btn btn-secondary" type="submit">Apagar/Encender</a>
			</td>
		</form>
		<form action="/eliminar-disp" method="POST">
			<td>
				<button class="btn btn-secondary" type="submit">Eliminar</a>
			</td>
		</form>
		</tr>
		{{/each}}
	</table>
	<br />
	<br />
	<h3>Reglas</h3>
	<table class="table">
		<tr>
			<th>Nombre</th>
		{{#each reglas}}
		<tr>
			<td>{{nombreRegla}}</td>
		</tr>
		{{/each}}
	</table>
	
	<br />
	<br />
	<div>
    	<a href="/agregar-regla"><input class="btn btn-primary btn-lg" value="+ Agregar Regla"></a>
  	</div>
  	
  	<br />
  	<br />
  	
  	


	<div>
    	<a href="../"><input class="btn btn-primary btn-lg" value="Ir al menu principal"></a>
  	</div>
</body>
{{/partial}}
{{>mainLayout.hbs}}